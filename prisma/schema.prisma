generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  MEMBER
  MODERATOR
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DISABLED
}

enum SubcommunityType {
  PUBLIC
  INVITE_ONLY
  PASSWORD_PROTECTED
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  passwordHash    String   @map("password_hash")
  displayName     String   @map("display_name")
  role            UserRole @default(MEMBER)
  status          UserStatus @default(ACTIVE)
  emailVerifiedAt DateTime? @map("email_verified_at")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Restricted account fields (for invite-code registration)
  isRestricted               Boolean  @default(false) @map("is_restricted")
  restrictedToSubcommunityId String?  @map("restricted_to_subcommunity_id")
  registeredWithInviteId     String?  @map("registered_with_invite_id")

  // Bot account fields
  isBot              Boolean  @default(false) @map("is_bot")
  createdByAdminId   String?  @map("created_by_admin_id")
  createdByAdmin     User?    @relation("BotCreator", fields: [createdByAdminId], references: [id])
  createdBots        User[]   @relation("BotCreator")

  profile               Profile?
  verificationTokens    EmailVerificationToken[]
  passwordResetTokens   PasswordResetToken[]
  sessions              Session[]

  // Forum relations
  createdSubcommunities Subcommunity[] @relation("CreatedSubcommunities")
  memberships           Membership[]
  threads               Thread[]
  posts                 Post[]
  votes                 Vote[]
  sentMessages          Message[]
  conversations1        Conversation[] @relation("ConversationUser1")
  conversations2        Conversation[] @relation("ConversationUser2")

  // Invite code relations
  restrictedToSubcommunity Subcommunity? @relation("RestrictedUsers", fields: [restrictedToSubcommunityId], references: [id])
  createdInviteCodes       InviteCode[]  @relation("CreatedInviteCodes")
  usedInviteCode           InviteCode?   @relation("UsedInviteCodes", fields: [registeredWithInviteId], references: [id])

  // Moderation relations
  mutedSubcommunities Subcommunity[] @relation("MutedSubcommunities")
  mutedThreads        Thread[]       @relation("MutedThreads")
  mutedPosts          Post[]         @relation("MutedPosts")
}

enum AvatarBodyType {
  MALE
  NEUTRAL
  FEMALE
}

enum AvatarSkinColor {
  LIGHT
  MEDIUM
  DARK
}

enum AvatarHairstyle {
  MALE_SHORT
  MALE_SPIKY
  NEUTRAL_BOB
  NEUTRAL_CURLY
  FEMALE_LONG
  FEMALE_PONYTAIL
}

enum AvatarAccessory {
  NONE
  EARRING
  SUNGLASSES
  PARROT
}

model Profile {
  userId          String  @id @map("user_id")
  avatarUrl       String? @map("avatar_url")
  bio             String?
  timezone        String?
  avatarBodyType  AvatarBodyType?  @map("avatar_body_type")
  avatarSkinColor AvatarSkinColor? @map("avatar_skin_color")
  avatarHairstyle AvatarHairstyle? @map("avatar_hairstyle")
  avatarAccessory AvatarAccessory? @map("avatar_accessory")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  token     String
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  usedAt    DateTime? @map("used_at")

  @@index([userId])
  @@unique([userId, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  usedAt    DateTime? @map("used_at")

  @@index([userId])
}

model Session {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String   @map("user_id")
  tokenHash   String   @map("token_hash")
  userAgent   String?  @map("user_agent")
  ipAddress   String?  @map("ip_address")
  expiresAt   DateTime @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")
  revokedAt   DateTime? @map("revoked_at")

  @@index([userId])
}

// ============================================
// Forum Models
// ============================================

model Subcommunity {
  id          String            @id @default(cuid())
  name        String            @unique
  slug        String            @unique
  description String?
  type        SubcommunityType  @default(PUBLIC)
  password    String?           // Hashed, for PASSWORD_PROTECTED type
  createdById String            @map("created_by_id")
  createdAt   DateTime          @default(now()) @map("created_at")
  updatedAt   DateTime          @updatedAt @map("updated_at")

  // Moderation fields
  isMuted     Boolean           @default(false) @map("is_muted")
  mutedAt     DateTime?         @map("muted_at")
  mutedById   String?           @map("muted_by_id")

  createdBy       User              @relation("CreatedSubcommunities", fields: [createdById], references: [id])
  memberships     Membership[]
  threads         Thread[]
  inviteCodes     InviteCode[]
  restrictedUsers User[]            @relation("RestrictedUsers")
  mutedBy         User?             @relation("MutedSubcommunities", fields: [mutedById], references: [id])

  @@index([createdById])
}

model Membership {
  id             String       @id @default(cuid())
  userId         String       @map("user_id")
  subcommunityId String       @map("subcommunity_id")
  role           String       @default("member") // member, moderator
  joinedAt       DateTime     @default(now()) @map("joined_at")

  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  subcommunity   Subcommunity @relation(fields: [subcommunityId], references: [id], onDelete: Cascade)

  @@unique([userId, subcommunityId])
  @@index([userId])
  @@index([subcommunityId])
}

model Thread {
  id             String       @id @default(cuid())
  title          String
  subcommunityId String       @map("subcommunity_id")
  authorId       String       @map("author_id")
  isPinned       Boolean      @default(false) @map("is_pinned")
  isLocked       Boolean      @default(false) @map("is_locked")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  // Moderation fields
  isMuted        Boolean      @default(false) @map("is_muted")
  mutedAt        DateTime?    @map("muted_at")
  mutedById      String?      @map("muted_by_id")

  subcommunity   Subcommunity @relation(fields: [subcommunityId], references: [id], onDelete: Cascade)
  author         User         @relation(fields: [authorId], references: [id])
  posts          Post[]
  mutedBy        User?        @relation("MutedThreads", fields: [mutedById], references: [id])

  @@index([subcommunityId])
  @@index([authorId])
}

model Post {
  id        String    @id @default(cuid())
  content   String
  threadId  String    @map("thread_id")
  authorId  String    @map("author_id")
  parentId  String?   @map("parent_id") // For nested replies
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at") // Soft delete

  // Moderation fields
  isMuted   Boolean   @default(false) @map("is_muted")
  mutedAt   DateTime? @map("muted_at")
  mutedById String?   @map("muted_by_id")

  thread    Thread    @relation(fields: [threadId], references: [id], onDelete: Cascade)
  author    User      @relation(fields: [authorId], references: [id])
  parent    Post?     @relation("PostReplies", fields: [parentId], references: [id])
  replies   Post[]    @relation("PostReplies")
  votes     Vote[]
  mutedBy   User?     @relation("MutedPosts", fields: [mutedById], references: [id])

  @@index([threadId])
  @@index([authorId])
  @@index([parentId])
}

model Vote {
  id        String   @id @default(cuid())
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  value     Int      // 1 = upvote, -1 = downvote
  createdAt DateTime @default(now()) @map("created_at")

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

// ============================================
// Messaging Models
// ============================================

model Conversation {
  id           String    @id @default(cuid())
  participant1 String    @map("participant_1")
  participant2 String    @map("participant_2")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  user1        User      @relation("ConversationUser1", fields: [participant1], references: [id])
  user2        User      @relation("ConversationUser2", fields: [participant2], references: [id])
  messages     Message[]

  @@unique([participant1, participant2])
  @@index([participant1])
  @@index([participant2])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String       @map("conversation_id")
  senderId       String       @map("sender_id")
  content        String
  readAt         DateTime?    @map("read_at")
  createdAt      DateTime     @default(now()) @map("created_at")

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation(fields: [senderId], references: [id])

  @@index([conversationId])
  @@index([senderId])
}

// ============================================
// Invite Code System
// ============================================

model InviteCode {
  id             String       @id @default(cuid())
  code           String       @unique
  subcommunityId String       @map("subcommunity_id")
  isRestricted   Boolean      @default(false) @map("is_restricted")
  usesRemaining  Int?         @map("uses_remaining") // null = unlimited
  expiresAt      DateTime?    @map("expires_at")
  createdById    String       @map("created_by_id")
  createdAt      DateTime     @default(now()) @map("created_at")

  subcommunity   Subcommunity @relation(fields: [subcommunityId], references: [id], onDelete: Cascade)
  createdBy      User         @relation("CreatedInviteCodes", fields: [createdById], references: [id])
  usedBy         User[]       @relation("UsedInviteCodes")

  @@index([code])
  @@index([subcommunityId])
  @@index([createdById])
}
